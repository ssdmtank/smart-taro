{
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org",
      "message": "chore(release): publish"
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": ["**/*.md", "**/es/*", "**/lib/*", "**/dist/*"],
  "version": "independent"
}
